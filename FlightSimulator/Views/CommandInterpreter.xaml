<UserControl x:Class="FlightSimulator.Views.CommandInterpreter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="commandBox" AcceptsReturn="True" Height="auto" Width="auto" Margin="5"></TextBox>
        <Button x:Name="OK" Click="OK_Click"  Grid.Row="1" Width="40" Padding="5" Margin="342,5,418,5" >OK</Button>
        <Button x:Name="Clear" Click="Clear_Click" Grid.Row="1" Width="40" Padding="5" Margin="418,5,342,5">Clear</Button>
    </Grid>
</UserControl>
