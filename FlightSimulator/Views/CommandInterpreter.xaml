<UserControl x:Class="FlightSimulator.Views.CommandInterpreter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="450" VerticalAlignment="Top" Margin="0,0,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" HorizontalAlignment="Center" Width="158">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="OK" Click="OK_Click" Width="40" Padding="5" Margin="37,0,2,0" Grid.Column="1"  >OK</Button>
            <Button x:Name="Clear" Click="Clear_Click" Width="40" Padding="5" VerticalAlignment="Bottom" Margin="4,0,35,0">Clear</Button>
        </Grid>
        <TextBox x:Name="commandBox" AcceptsReturn="True" Height="auto" Width="auto" Margin="5" TextChanged="CommandBox_TextChanged"></TextBox>

    </Grid>
</UserControl>
